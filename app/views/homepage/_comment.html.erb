<div class ="category-tab shop-details-tab">
	<div class ="col-sm-12">
		<ul class ="nav nav-tabs">
			<li><a href="#details" data-toggle="tab"><%=t :comments %></a></li>
		</ul>
	</div>

	<div class="tab-pane fade active in" id="comment" >
		<% @product_ratings.each do |rating| %>
			<% account = Account.find_by_id(rating.account_id) %>

			<p style="margin-left:25px; font-size: 20px; font-weight:bold;"><%=t :by %> <span style="color:red;"><%= account.name %></span> <%=t :on_review %> <span style="color:red;"><%= rating.created_at.strftime("%b %d. %Y") %></span></p>
			<p style="color:blue; margin-left:27px; font-size 15px; font-weight:bold"><%=t :rating %>: <%= rating.stars %></p>
			<p style="margin-left:50px; font-size: 15px;"><%= rating.comment %></p>	
			<br>   
   		<% end %>
   	</div>
</div>
