<section id="slider"><!--slider-->
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div id="slider-carousel" class="carousel slide" data-ride="carousel">
					<ol class="carousel-indicators">
						<li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
						<li data-target="#slider-carousel" data-slide-to="1"></li>
						<li data-target="#slider-carousel" data-slide-to="2"></li>
					</ol>

					<div class="carousel-inner">
						<% @new_products.each do |product| %>
							<% if product == @new_products.last %>
								<div class="item active">
									<div class="col-sm-6">
										<h1><span>william's</span> CORNER</h1>
										<h2><%= product.name %></h2>
										<p>
											<% if product.des.length > 50 %>
												<%= product.des[0..50] + "..." %>
											<% else %>
												<%= product.des %>
											<% end %>
										</p>
										<%= link_to t('get_button'), homepage_path(product) , class: "btn btn-primary", :target => "_blank"%>
									</div>
									<div class="col-sm-6">
										<img src="<%= product.img %>" class="girl img-responsive" alt="">
									</div>
								</div>
							<% else %>
								<div class="item">
									<div class="col-sm-6">
										<h1><span>william's</span> CORNER</h1>
										<h2><%= product.name %></h2>
										<p>
											<% if product.des.length > 50 %>
												<%= product.des[0..50] + "..." %>
											<% else %>
												<%= product.des %>
											<% end %>
										</p>
										<%= link_to t('get_button'), homepage_path(product), class: "btn btn-primary", :target => "_blank" %>
									</div>
									<div class="col-sm-6">
										<img src="<%= product.img %>" class="girl img-responsive" alt="">										
									</div>
								</div>
							<% end %>
						<% end %>
					</div>
				</div>

			</div>
		</div>
	</div>
</section><!--/slider-->
