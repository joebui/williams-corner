<html>
  

<body>
  <% @genres.each do |genre| %>
		<% if genre == @genres.first %>
			<div class="tab-pane fade active in" id="<%= genre.name %>">
				<% @products.each do |product| %>
					<% if product.genre == genre.name %>
						<div class="col-sm-3">
							<div class="product-image-wrapper">
								<div class="single-products">
									<div class="productinfo text-center">
										<img src="<%= product.img %>" alt="image">
										<h2>$ <%= product.price %></h2>
										<p><%= product.name %></p>
										<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Detail</a>
									</div>
								</div>
							</div>
						</div>
					<% end %>	
				<% end %>
			</div>
		<% else %>
			<div class="tab-pane fade" id="<%= genre.name %>">
				<% @products.each do |product| %>
					<% if product.genre == genre.name %>
						<div class="col-sm-3">
							<div class="product-image-wrapper">
								<div class="single-products">
									<div class="productinfo text-center">
										<img src="<%= product.img %>" alt="image">
										<h2>$ <%= product.price %></h2>
										<p><%= product.name %></p>
										<a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Detail</a>
									</div>
								</div>
							</div>
						</div>
					<% end %>	
				<% end %>
			</div>
		<% end %>
	<% end %>
</body>
</html>