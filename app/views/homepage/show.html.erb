<!DOCTYPE html>
<html>
<head>
	<title> <%= @product.name %> </title>
</head>
<body>
	<script type="text/javascript">
		window.fbAsyncInit = function() {
	      	FB.init({
	        	appId      : '348544855355699',
		        xfbml      : true,
		        version    : 'v2.3'
	      	});
    	};
	    (function(d, s, id){
	       	var js, fjs = d.getElementsByTagName(s)[0];
	       	if (d.getElementById(id)) {return;}
	       	js = d.createElement(s); js.id = id;
	       	js.src = "//connect.facebook.net/en_US/sdk.js";
	       	fjs.parentNode.insertBefore(js, fjs);
     	}(document, 'script', 'facebook-jssdk'));
	</script>
	
	<%= render 'header' %>
	<section>
		<div class="container">
			<div class="row">
				<div class="product-details"><!--product-details-->
					<div class="col-sm-4">
						<div class="view-product">
							<img src="<%= @product.img %>" alt="product-image" />
						</div>
					</div>
					<div class="col-sm-4">
						<div class="product-information"><!--/product-information-->
							<h2>Anne Klein Sleeveless Colorblock Scuba</h2>
							<p>Web ID: 1089772</p>
							<%= render "product_row", product: @product, order_item: @order_item %>
							<br>
							<div class="fb-share-button" data-href="<%= @url %>" data-layout="button_count"></div>
						</div><!--/product-information-->
					</div>
					<div class="col-sm-4">
						<iframe width="100%" height="395" src="<%= @product.link %>" frameborder="0" allowfullscreen></iframe>
					</div>
				</div><!--/product-details-->

				<%= render template: 'ratings/new' %>
				<%= render 'comment' %>
			</div>
		</div>
	</section>

    <%= render 'footer' %>
	<a id="scrollUp" href="#" style="position: fixed;">
		<i class="glyphicon glyphicon-chevron-up"></i>
	</a>
</body>
</html>
