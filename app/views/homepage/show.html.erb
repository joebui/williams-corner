<head>
	<title> <%= @product.name %> </title>
</head>

<body>
	<script type="text/javascript">
		window.fbAsyncInit = function() {
	      	FB.init({
	        	appId      : '348544855355699',
		        xfbml      : true,
		        version    : 'v2.3'
	      	});
    	};

	    (function(d, s, id){
	       	var js, fjs = d.getElementsByTagName(s)[0];
	       	if (d.getElementById(id)) {return;}
	       	js = d.createElement(s); js.id = id;
	       	js.src = "//connect.facebook.net/en_US/sdk.js";
	       	fjs.parentNode.insertBefore(js, fjs);
     	}(document, 'script', 'facebook-jssdk'));
	</script>

	<%= render 'header' %>
	<section>
		<div class="container">
			<div class="row">
				<div class="col-sm-12 padding-right left-sidebar">

					<div class="breadcrumbs">
						<ol class="breadcrumb">
						  <li><a href="/">Home</a></li>
						  <li class="active"><%= @product.name %></li>
						</ol>
					</div>

					<h2><%=t :game_heading %></h2>
					<div class="product-details"><!--product-details-->
						<div class="col-sm-4">
							<iframe width="100%" height="355" src="<%= @product.link %>" frameborder="0" allowfullscreen></iframe>
						</div>

						<div class="col-sm-6">
							<div class="product-information"><!--/product-information-->
								<h2><%= @product.name %></h2>
								<%= render "product_row", product: @product, order_item: @order_item %>

								<div class="fb-share-button" data-href="<%= @url %>" data-layout="button_count"></div>
							</div><!--/product-information-->
						</div>
						<ul>
							<div class="col-sm-2">
								<div class="view-product">
									<img src="<%= @product.img %>" alt="" />
								</div>
							</div>

							<div class="col-sm-2" style="margin-top: 25px;">
								<div class="view-product">
									<img src="/assets/PC.gif" alt="" />
								</div>
							</div>
						</ul>
					</div><!--/product-details-->

					<div class="category-tab shop-details-tab"><!--category-tab-->
						<div class="col-sm-12">
							<ul class="nav nav-tabs">
								<li><a href="#details" data-toggle="tab"><%=t :detail %></a></li>
							</ul>
						</div>

							<div class="tab-pane fade active in" id="reviews" >
								<div class="col-sm-12">
									<p><%= @product.des %></p>
								</div>
							</div>

						</div>
						<!--review-->
					<%= render template: 'ratings/new' %>
					<%= render 'comment' %>
					</div><!--/category-tab-->
				</div>
			</div>
		</div>
	</section>

	<footer id="footer"><!--Footer-->
		<%= render 'footer' %>

	</footer><!--/Footer-->

	<a id="scrollUp" href="#" style="position: fixed;">
		<i class="glyphicon glyphicon-chevron-up"></i>
	</a>
