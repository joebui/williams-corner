<!DOCTYPE html>
<html>
<head>
    <title><%=t :product_admin_title %></title>
</head>
<body class="boss_body">
<div id="main_container">

    <div class="header">
    <div class="logo"><a href="/"><img src="<%= asset_path('logo.png') %>" alt="" title="" border="0" /></a></div>
    </div>
    
    <div class="main_content">
        <div class="menu">
            <ul>
                <li><%= link_to t('admin_game'), products_path %></li>
                <li><%= link_to t('admin_genre'), genres_path %></li>
                <li><%= link_to t('admin_account'), accounts_path %></li>
                <li><%= link_to t('admin_order'), order_items_path %></li>
                <li><%= link_to t('admin_coupon'), coupons_path %></li>
                <li><%= link_to t('admin_report'), order_items_report_path %></li>
                <li><%= link_to t('admin_review'), ratings_path %></li>
                <li><%= link_to t('admin_logout'), logout_path, method: "delete" %></li>
                <li><%= link_to image_tag("flag_usa.png", :border => 0),{:controller => "homepage", :action => "index", :language => 'en' } %></li>
				<li><%= link_to image_tag("flag_vietnam.png", :border => 0),{:controller => "homepage", :action => "index", :language => 'vi' } %></li>
            </ul>
        </div> 
    <div class="center_content">
    <div class="right_content">            
        
    <h2><%=t :product_heading %></h2> 

    <%= form_tag(products_path, :method => "get", class: "navbar-form", id: "search-form") do %>      
        <%= text_field_tag :search, params[:search], placeholder: t('search_holder'), onclick: 'javascript: this.value = ""' %>
        <%= select_tag :type, options_for_select(["Name", "Price", "Genre"]), :selected => "Name", :style => "max-width: 15%;" %>
        <%= submit_tag t('search_button'), :name => nil %>
    <% end %>                 
    <%= yield %>

    <%= link_to t('new_product'), new_product_path , class: "btn btn-primary" %>
    <br><br>
 
    <table id="rounded-corner" summary="2007 Major IT Companies' Profit">
    <thead>
        <tr>
            <th scope="col" class="rounded-company"><%=t :product_game %></th>
            <th scope="col" class="rounded"><%=t :product_image %></th>
            <th scope="col" class="rounded"><%=t :product_price %></th>
            <th scope="col" class="rounded"><%=t :product_genre %></th>
            <th scope="col" class="rounded"><%=t :product_description %></th>
            <th scope="col" class="rounded"><%=t :visited %></th>
            <th scope="col" class="rounded"><%=t :product_edit %></th>
            <th scope="col" class="rounded-q4"><%=t :product_delete %></th>
        </tr>
    </thead>
        
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= product.name %></td>
            <td><img src=<%= product.img %> alt="img" height="100dp" width="100dp" ></td>
            <td><%= product.price %></td>
            <td><%= product.genre %></td>
            <% if product.des.length > 50 %>
                <td><%= product.des[0..50] + "..." %></td>
            <% else %>
                <td><%= product.des %></td>
            <% end %>            
            <td><%= product.viewed %></td>
            <td><%= link_to t('product_edit'), edit_product_path(product) , class: "btn btn-primary"%></td>
            <td><%= link_to t('product_delete'), product_path(product),
              method: :delete,
              data: { confirm: t('delete_product_confirmation') } , class: "btn btn-primary"%></td>
        </tr>    
        <% end %>
    </tbody>
    
    </table>
    <br>    
    </div><!-- end of right content-->
    </div>   <!--end of center content -->               
    <div class="clear"></div>
    </div> <!--end of main content-->
    <div class="footer">
    </div>
</div>      
</body>
</html>