<div class="category-tab shop-details-tab"><!--category-tab-->
	<div class="col-sm-12">
		<ul class="nav nav-tabs">
			<li><a href="#review" data-toggle="tab"><%=t :rate_product %></a></li>
		</ul>
	</div>

	<div class="tab-pane fade active in" id="comment" >
		<%= form_for :rating, url: ratings_path do |f| %>  
			<div class="col-sm-12">										
				<p>
					<%= f.text_area :comment, placeholder: t('comment_holder'), rows: "6", id: "comment" %>
				</p>					
				<p>						
					<%= f.select :stars, options_for_select(["1 star", "2 stars", "3 stars", "4 stars", "5 stars"]), :prompt => t('your_rating') %>
				</p>					
				<p>
					<%= f.submit t('submit_review_button'), class: "btn btn-primary"%>
				</p>
			</div>
		<% end %>			
	</div>
</div>	