<head>
<title><%=t :login_title %></title>
</head>

<div class="main_container">
	<div class="row">
	  	<div class="col-md-6 col-md-offset-3">
		  	<h1><%=t :login_heading %></h1>
		    <%= form_for(:session, url: login_path) do |f| %>

		      	<%= f.label :name, t('name') %>
		      	<%= f.text_field :name, class: 'form-control', :style=>"width:100%" %>

		      	<br/>

		      	<%= f.label :password, t('password') %>
		      	<%= link_to "(Forgot password)", new_password_reset_path %>
		      	<%= f.password_field :password, class: 'form-control', :style=>"width:100%" %>
				
				<br>		      	
		        <%= f.check_box :remember_me %>
		        <span><b> Remember</b></span>		      	

		        <br>
		      	<%= f.submit t('login_button'), class: "btn btn-primary" %>		      			     			      
		    <% end %>    
		    <br/>
		    <% flash.each do |key, value| %>
			    <div class="<%= flash_class(key) %>">
			          <%= value %>
			    </div>
			<% end %>				
		    <%= link_to t('return_link'), root_url %>
	  	</div>
	</div>
</div>