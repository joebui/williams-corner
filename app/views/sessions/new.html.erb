<head>
<title><%=t :login_title %></title>
</head>

<div class="main_container">
	<div class="row">
	  	<div class="col-md-6 col-md-offset-3">
		  	<h2><%=t :login_heading %></h2>
		    <%= form_for(:session, url: login_path) do |f| %>

		      	<%= f.label :name, t('name') %>
		      	<%= f.text_field :name, class: 'form-control', :style=>"width:100%" %>

		      	<br/>

		      	<%= f.label :password, t('password') %>
		      	<%= f.password_field :password, class: 'form-control', :style=>"width:100%" %>

		      	<%= f.submit t('login_button'), class: "btn btn-primary" %>		      			     			      
		    <% end %>    
		    <br/>
		    <% flash.each do |key, value| %>
			    <div class="<%= flash_class(key) %>">
			          <%= value %>
			    </div>
			<% end %>				
		    <%= link_to t('return_link'), root_url %>
	  	</div>
	</div>
</div>